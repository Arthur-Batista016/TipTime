<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipTime.TiptTmePage"
             Title="TiptTmePage">
    <VerticalStackLayout>
        <Label 
            Text="TIP TIME!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Editor
            x:Name="inserirValor"
            Placeholder="Digite o Valor da Compra: "
            />

        <Label
            x:name="gorj"
                               
            />

        <Label
            x:name="total"
   
            />

        <Button
            
            clicked="15Clicked"
         />

        <Button
         
            clicked="30Cliked"
            />

        <Button
            
            clicked="arredondarCimaClicked"
            />

        <Button
           
            clicked="arredondarBaixoClicked"
            />




    </VerticalStackLayout>
</ContentPage>