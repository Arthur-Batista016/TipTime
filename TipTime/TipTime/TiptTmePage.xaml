<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipTime.TiptTmePage"
             Title="TiptTmePage">
    <VerticalStackLayout>
        <Label 
            Text="TIP TIME!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Editor
            X:Name="inserirValor"
            Placeholder="Digite o Valor da Compra: "
            />

        <Label
            X:Name="gorj"
            Text="Gorjeta:"
                       
            />

        <label
            X:Name="total"
            Text="Total:"
            />

        <Button
            Text="15%"
            Clicked="15Cliked"
         />

        <Button
            Text="30%" 
            Clicked="30Cliked"
            />

        <Button
            Text="Arredondar para Cima"
            Clicked="arredondarCimaClicked"
            />

        <Button
            Text="Arredondar para Baixo"
            Clicked="arredondarBaixoClicked"
            />




    </VerticalStackLayout>
</ContentPage>